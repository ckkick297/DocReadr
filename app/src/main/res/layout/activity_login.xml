<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">


    <ImageView
        android:src="@drawable/ic_docreadr_logo_splash"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/eight_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvSplash0"/>

    <TextView
        android:id="@+id/tvSplash0"
        android:text="DOC READER"
        android:textSize="@dimen/eighteen_margin"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@+id/tvSplash1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvSplash1"
        android:visibility="gone"
        android:text=""
        android:textSize="@dimen/sixteen_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tvSplash2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvSplash2"
        android:textAlignment="center"
        android:text=""
        android:textSize="@dimen/sixteen_margin"
        android:textColor="#14044E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/google_sign_in_button"
        android:drawableTint="@color/white"
        android:textColor="@color/white"
        android:onClick="googleSignInClick"
        android:text="Continue with Google"
        android:layout_marginTop="@dimen/thirty_margin"
        android:paddingLeft="@dimen/sixteen_margin"
        android:drawableLeft="@drawable/google_now"
        android:background="@drawable/btn_google_bg"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:textSize="@dimen/sixteen_margin"
        app:layout_constraintTop_toBottomOf="@+id/tvSplash2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/linkedin_login_button"
        android:drawableTint="@color/white"
        android:textColor="@color/white"
        android:onClick="linkedInSignInClick"
        android:paddingLeft="@dimen/sixteen_margin"
        android:drawableLeft="@drawable/linkedin_now"
        android:background="@drawable/btn_linkedin_bg"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/sixteen_margin"
        android:textAllCaps="false"
        android:textSize="@dimen/sixteen_margin"
        android:text="Continue with LinkedIn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google_sign_in_button"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/twenty_four_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvSplash3"
            android:text="VOCSO"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSplash4"
            android:text="\u00AE"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>