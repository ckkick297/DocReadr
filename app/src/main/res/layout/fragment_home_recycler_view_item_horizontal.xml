<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/eight_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#F6F6F6"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/eight_margin"
        app:cardElevation="0dp"
        android:elevation="0dp">

        <ImageView
            android:id="@+id/ivBook"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/five_margin"
            android:layout_width="90dp"
            android:layout_height="120dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvBookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/five_margin"
        android:paddingTop="@dimen/five_margin"
        android:layout_marginBottom="@dimen/eight_margin"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/nav_item_selected_color" />

</LinearLayout>