<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivBookTypeBookFragment"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:padding="2dp"
        android:background="@drawable/rect_corner"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"/>


    <LinearLayout
        android:id="@+id/llbookItem"
        android:layout_marginTop="@dimen/twelve_margin"
        android:layout_marginRight="@dimen/sixteen_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivBookTypeBookFragment"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleBookFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWordsBookFragment"
                android:layout_marginTop="@dimen/five_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/nav_item_unselected_color" />

            <TextView
                android:id="@+id/tvPagesBookFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/nav_item_unselected_color" />

            <TextView
                android:id="@+id/tvTimeBookFragment"
                android:layout_marginTop="@dimen/eight_margin"
                android:maxLines="2"
                android:textColor="@color/nav_item_selected_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/pbBookFragment"
            android:layout_marginTop="@dimen/eight_margin"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:progressTint="@color/colorAccent" />

    </LinearLayout>

</RelativeLayout>
